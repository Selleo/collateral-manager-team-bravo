
<div class="">
	<h2>Name: <%= @collateral.name %></h2>
	<hr>
	   <p class="collaterals-search__link">
           url: <%= link_to @collateral.url, @collateral.url %>
          </p>
	<p>Type: <%= @collateral.collateral_kind.kind %></p>
	<hr>
	<h2>Tags: </h2>
	<% @collateral.tags.each do |tag| %>
        <%= tag.name %>
        <%= tag.tag_kind.kind %>
        <% @collateral.collateral_tags.each do |coll_tag| %>
         	<% if coll_tag.tag_id == tag.id %>
         		<p>Strength: <%= coll_tag.strength %></p>
         	<% end %>

        <% end %>
        <hr>
    <% end %>
<br>



	<%= link_to 'Edit', edit_collateral_path(@collateral) %> |
	<%= link_to 'Back', root_path %>
	<!-- link_to 'Back', collaterals_path  -->
</div>
